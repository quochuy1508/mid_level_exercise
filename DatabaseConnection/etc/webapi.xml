<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- CustomerTraining -->
    <route url="/V1/customerTraining/:id" method="GET">
        <service class="Magenest\DatabaseConnection\Api\CustomerTrainingRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/customerTraining/search" method="GET">
        <service class="Magenest\DatabaseConnection\Api\CustomerTrainingRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/customerTraining" method="POST">
        <service class="Magenest\DatabaseConnection\Api\CustomerTrainingRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/customerTraining/:id" method="PUT">
        <service class="Magenest\DatabaseConnection\Api\CustomerTrainingRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/customerTraining/:id" method="DELETE">
        <service class="Magenest\DatabaseConnection\Api\CustomerTrainingRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
