<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote" resource="checkout" comment="Sales Flat Quote">
        <column xsi:type="decimal" name="customer_rank_discount" scale="4" precision="20" unsigned="false" nullable="false"
                default="0" comment="Customer Rank Discount Amount"/>
        <column xsi:type="decimal" name="base_customer_rank_discount" scale="4" precision="20" unsigned="false"
                nullable="false" default="0" comment="Base Customer Rank Discount Amount"/>
    </table>
    <table name="sales_order" resource="sales" comment="Sales Flat Order">
        <column xsi:type="decimal" name="customer_rank_discount" scale="4" precision="20" unsigned="false" nullable="false"
                default="0" comment="Customer Rank Discount Amount"/>
        <column xsi:type="decimal" name="base_customer_rank_discount" scale="4" precision="20" unsigned="false"
                nullable="false" default="0" comment="Base Customer Rank Discount Amount"/>
        <column xsi:type="int" name="sale_agent_id" unsigned="true" nullable="true" identity="false"
                comment="Sale Agent ID"/>
        <column xsi:type="varchar" name="order_source" nullable="true" length="255" comment="Order Source"/>
    </table>
</schema>
