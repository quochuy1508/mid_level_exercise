<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magenest\CustomAdmin\Block\Adminhtml\Event\Form\Edit" name="magenest_event_form"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Magenest\CustomAdmin\Block\Adminhtml\Event\Form\Tabs" name="magenest_event_form_tabs">
                <block class="Magenest\CustomAdmin\Block\Adminhtml\Event\Form\Tab\EventForm" name="magenest_edit_tab_events"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">add_new_event</argument>
                    <argument name="block" xsi:type="string">magenest_edit_tab_events</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
