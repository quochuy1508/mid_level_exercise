<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="merchant_entity" resource="default" engine="innodb" comment="Merchant Table">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="varchar" name="city" nullable="true" length="255" comment="City"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
    <table name="merchant_entity_datetime" resource="default" engine="innodb"
           comment="Merchant Datetime Attribute Backend Table">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="datetime" name="value" on_update="false" nullable="true" comment="Value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="MERCHANT_ENTT_DTIME_ATTR_ID_EAV_ATTR_ATTR_ID"
                    table="merchant_entity_datetime" column="attribute_id" referenceTable="eav_attribute"
                    referenceColumn="attribute_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="MERCHANT_ENTT_DTIME_ENTT_ID_MERCHANT_ENTT_ENTT_ID"
                    table="merchant_entity_datetime" column="entity_id" referenceTable="merchant_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="MERCHANT_ENTITY_DATETIME_ENTITY_ID" indexType="btree">
            <column name="entity_id"/>
        </index>
        <index referenceId="MERCHANT_ENTITY_DATETIME_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
    </table>
    <table name="merchant_entity_decimal" resource="default" engine="innodb"
           comment="Merchant Decimal Attribute Backend Table">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="decimal" name="value" scale="6" precision="20" unsigned="false" nullable="true"
                comment="Value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="MERCHANT_ENTT_DEC_ATTR_ID_EAV_ATTR_ATTR_ID"
                    table="merchant_entity_decimal" column="attribute_id" referenceTable="eav_attribute"
                    referenceColumn="attribute_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="MERCHANT_ENTT_DEC_ENTT_ID_MERCHANT_ENTT_ENTT_ID"
                    table="merchant_entity_decimal" column="entity_id" referenceTable="merchant_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="MERCHANT_ENTITY_DECIMAL_ENTITY_ID_ATTRIBUTE_ID_STORE_ID">
            <column name="entity_id"/>
            <column name="attribute_id"/>
        </constraint>
        <index referenceId="MERCHANT_ENTITY_DECIMAL_ENTITY_ID" indexType="btree">
            <column name="entity_id"/>
        </index>
        <index referenceId="MERCHANT_ENTITY_DECIMAL_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
    </table>
    <table name="merchant_entity_int" resource="default" engine="innodb"
           comment="Merchant Integer Attribute Backend Table">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="int" name="value" unsigned="false" nullable="true" identity="false"
                comment="Value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="MERCHANT_ENTT_INT_ATTR_ID_EAV_ATTR_ATTR_ID"
                    table="merchant_entity_int" column="attribute_id" referenceTable="eav_attribute"
                    referenceColumn="attribute_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="MERCHANT_ENTT_INT_ENTT_ID_MERCHANT_ENTT_ENTT_ID"
                    table="merchant_entity_int" column="entity_id" referenceTable="merchant_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="MERCHANT_ENTITY_INT_ENTITY_ID_ATTRIBUTE_ID_STORE_ID">
            <column name="entity_id"/>
            <column name="attribute_id"/>
        </constraint>
        <index referenceId="MERCHANT_ENTITY_INT_ENTITY_ID" indexType="btree">
            <column name="entity_id"/>
        </index>
        <index referenceId="MERCHANT_ENTITY_INT_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
    </table>
    <table name="merchant_entity_text" resource="default" engine="innodb"
           comment="Merchant Text Attribute Backend Table">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="mediumtext" name="value" nullable="true" comment="Value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="MERCHANT_ENTT_TEXT_ATTR_ID_EAV_ATTR_ATTR_ID"
                    table="merchant_entity_text" column="attribute_id" referenceTable="eav_attribute"
                    referenceColumn="attribute_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="MERCHANT_ENTT_TEXT_ENTT_ID_MERCHANT_ENTT_ENTT_ID"
                    table="merchant_entity_text" column="entity_id" referenceTable="merchant_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="MERCHANT_ENTITY_TEXT_ENTITY_ID_ATTRIBUTE_ID_STORE_ID">
            <column name="entity_id"/>
            <column name="attribute_id"/>
        </constraint>
        <index referenceId="MERCHANT_ENTITY_TEXT_ENTITY_ID" indexType="btree">
            <column name="entity_id"/>
        </index>
        <index referenceId="MERCHANT_ENTITY_TEXT_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
    </table>
    <table name="merchant_entity_varchar" resource="default" engine="innodb"
           comment="Merchant Varchar Attribute Backend Table">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="varchar" name="value" nullable="true" length="255" comment="Value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="MERCHANT_ENTT_VCHR_ATTR_ID_EAV_ATTR_ATTR_ID"
                    table="merchant_entity_varchar" column="attribute_id" referenceTable="eav_attribute"
                    referenceColumn="attribute_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="MERCHANT_ENTT_VCHR_ENTT_ID_MERCHANT_ENTT_ENTT_ID"
                    table="merchant_entity_varchar" column="entity_id" referenceTable="merchant_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="MERCHANT_ENTITY_VARCHAR_ENTITY_ID_ATTRIBUTE_ID_STORE_ID">
            <column name="entity_id"/>
            <column name="attribute_id"/>
        </constraint>
        <index referenceId="MERCHANT_ENTITY_VARCHAR_ENTITY_ID" indexType="btree">
            <column name="entity_id"/>
        </index>
        <index referenceId="MERCHANT_ENTITY_VARCHAR_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
    </table>
    <table name="merchant_eav_attribute" resource="default" engine="innodb" comment="Merchant Eav Attribute">
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                comment="Attribute ID"/>
        <column xsi:type="smallint" name="is_visible" unsigned="true" nullable="false" identity="false"
                default="1" comment="Is Visible"/>
        <column xsi:type="varchar" name="input_filter" nullable="true" length="255" comment="Input Filter"/>
        <column xsi:type="smallint" name="multiline_count" unsigned="true" nullable="false" identity="false"
                default="1" comment="Multiline Count"/>
        <column xsi:type="text" name="validate_rules" nullable="true" comment="Validate Rules"/>
        <column xsi:type="smallint" name="is_system" unsigned="true" nullable="false" identity="false"
                default="0" comment="Is System"/>
        <column xsi:type="int" name="sort_order" unsigned="true" nullable="false" identity="false"
                default="0" comment="Sort Order"/>
        <column xsi:type="varchar" name="data_model" nullable="true" length="255" comment="Data Model"/>
        <column xsi:type="smallint" name="is_used_in_grid" unsigned="true" nullable="false" identity="false"
                default="0" comment="Is Used in Grid"/>
        <column xsi:type="smallint" name="is_visible_in_grid" unsigned="true" nullable="false"
                identity="false" default="0" comment="Is Visible in Grid"/>
        <column xsi:type="smallint" name="is_filterable_in_grid" unsigned="true" nullable="false"
                identity="false" default="0" comment="Is Filterable in Grid"/>
        <column xsi:type="smallint" name="is_searchable_in_grid" unsigned="true" nullable="false"
                identity="false" default="0" comment="Is Searchable in Grid"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="attribute_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="MERCHANT_EAV_ATTRIBUTE_ATTRIBUTE_ID_EAV_ATTRIBUTE_ATTRIBUTE_ID"
                    table="merchant_eav_attribute" column="attribute_id" referenceTable="eav_attribute"
                    referenceColumn="attribute_id" onDelete="CASCADE"/>
        <index referenceId="CUSTOMER_EAV_ATTRIBUTE_SORT_ORDER" indexType="btree">
            <column name="sort_order"/>
        </index>
    </table>
    <table name="merchant_eav_attribute_website" resource="default" engine="innodb"
           comment="Merchant Eav Attribute Website">
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                comment="Attribute ID"/>
        <column xsi:type="smallint" name="website_id" unsigned="true" nullable="false" identity="false"
                comment="Website ID"/>
        <column xsi:type="smallint" name="is_visible" unsigned="true" nullable="true" identity="false"
                comment="Is Visible"/>
        <column xsi:type="smallint" name="is_required" unsigned="true" nullable="true" identity="false"
                comment="Is Required"/>
        <column xsi:type="text" name="default_value" nullable="true" comment="Default Value"/>
        <column xsi:type="smallint" name="multiline_count" unsigned="true" nullable="true" identity="false"
                comment="Multiline Count"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="attribute_id"/>
            <column name="website_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="MER_EAV_ATTR_WS_ATTR_ID_EAV_ATTR_ATTR_ID"
                    table="merchant_eav_attribute_website" column="attribute_id" referenceTable="eav_attribute"
                    referenceColumn="attribute_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="MER_EAV_ATTR_WS_WS_ID_STORE_WS_WS_ID"
                    table="merchant_eav_attribute_website" column="website_id" referenceTable="store_website"
                    referenceColumn="website_id" onDelete="CASCADE"/>
        <index referenceId="CUSTOMER_EAV_ATTRIBUTE_WEBSITE_WEBSITE_ID" indexType="btree">
            <column name="website_id"/>
        </index>
    </table>
</schema>
